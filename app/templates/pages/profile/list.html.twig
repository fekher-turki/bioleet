{% extends 'base.html.twig' %}

{% block title %}BioLeet Settings
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}


{% block body %}
	<div class="container mx-auto mt-4">
		<div class="row">
			{% for profile in profiles %}
				<div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 d-flex">
					<div class="card bg-dark mb-4">
						<a href="/profile/{{profile.game.code}}/{{profile.ingameName}}">
							{% if profile.user.avatar == "default-avatar.png" %}
								<img src="{{ asset('images/default/default-avatar.png') | imagine_filter('avatar_256') }}" class="card-img-top" alt="{{ profile.ingameName }}">
							{% else %}
								<img src="{{ asset('images/users/' ~ profile.user.avatar) | imagine_filter('avatar_256') }}" class="card-img-top" alt="{{ profile.user.avatar }}">
							{% endif %}
							<img src="{{ asset('images/games/' ~ profile.game.code|lower ~ '.png') }}" style="width: 40px; padding-right: 10px;" class="position-absolute end-0" alt="{{ profile.game.name }}">
							<div class="card-body">
								<h4 class="text-center">
                                    <img src="{{ asset('images/countries/' ~ profile.user.country|lower ~ '.png') }}" style="width: 32px;" alt="{{ profile.user.country }}">
									{{profile.ingameName}}
                                    {% if profile.user.isVerified %}
                                        <span class="h5 mb-2">
										<i class="fa fa-check-circle me-2 display-25 text-primary" data-toggle="tooltip" data-placement="top" title="Verified"></i>
									</span>
                                    {% endif %}
									{% if profile.user.isPremium %}
										<span class="h5 mb-2">
											<i class="fa fa-crown me-2 fa-xl text-warning" data-toggle="tooltip" data-placement="top" title="Premium"></i>
										</span>
									{% endif %}
								</h4>
							</div>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
