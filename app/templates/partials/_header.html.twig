<!-- parse-ignore-start -->
<script type="text/javascript">
	jQuery(document).ready(function () {
		var searchRequest = null;
		$("#search").keyup(function () {
			var minlength = 3;
			var that = this;
			var value = $(this).val();
			var profileSelector = $("#profiles").html('');
			var profileTitleSelector = $("#profilesTitle").html('');
			var teamSelector = $("#teams").html('');
			var teamTitleSelector = $("#teamsTitle").html('');
			var errorSelector = $("#error").html('');
			if (value.length >= minlength) {
				if (searchRequest != null) 
				searchRequest.abort();

				searchRequest = $.ajax({
					type: "GET",
					url: "{{ path('ajax_search') }}",
					data: {
						'q': value
					},
					dataType: "text",
					success: function (msg) {
						if (value == $(that).val()) {
							var result = JSON.parse(msg);
							if (!result.hasOwnProperty('profiles') && !result.hasOwnProperty('teams'))
							{
								errorSelector.append('<p>' + result['error'] + '<p>');
							}
							else {
								if (result.hasOwnProperty('profiles')) {
									profileTitleSelector.append(`<div class="mb-2"><small>Players</small></div>`);
								}
								if (result.hasOwnProperty('teams')) {
									teamTitleSelector.append(`<div class="mb-2"><small>Teams</small></div>`);
								}
								$.each(result, function (key, arr) {
									$.each(arr, function (id, value) {
										if (key == 'profiles') {
											if (id != 'error') {
												profileSelector.append(
												    `<div class="mb-2">
												        <a href="/profile/${value.game.code}/${value.ingameName}">
												            <img src="{{ asset('images/countries/' ~ '${value.user.country}'|lower ~ '.png') }}" style="width: 32px; padding-left: 5px;" alt="${value.user.country}">
												            ${value.ingameName}
												            <img src="{{ asset('images/games/' ~ '${value.game.code}'|lower ~ '.png') }}" style="width: 32px; padding-right: 10px;" class="position-absolute end-0" alt="${value.game.name}">
												        </a>
												    </div>`
												);
											}
										}
										if (key == 'teams') {
											if (id != 'error') {
												teamSelector.append(
												    `<div>
												        <a href="/team/${value.game.code}/${value.teamUrl}">
												            <img src="{{ asset('images/countries/' ~ '${value.country}'|lower ~ '.png') }}" style="width: 32px; padding-left: 5px;" alt="${value.country}">
												            ${value.teamName}
												            <img src="{{ asset('images/games/' ~ '${value.game.code}'|lower ~ '.png') }}" style="width: 32px; padding-right: 10px;" class="position-absolute end-0" alt="${value.game.name}">
												        </a>
												    </div>`
												);
											}
										}
									});
								});
							}
							
						}
					}
				});
			} else {
				errorSelector.append('<p>Please enter at least ' + minlength + ' characters.<p>');
			}
		});
	});
</script>
<!-- parse-ignore-end -->
